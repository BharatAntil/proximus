#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

DESTDIR=`pwd`/debian/proximus

configure: configure-stamp
configure-stamp:
	dh_testdir

build: build-stamp

build-stamp: configure-stamp
	dh_testdir

clean:
	dh_testdir
	dh_testroot
	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean
	dh_installdirs -i
	dh_install
	# directories
	install -d ${DESTDIR}/etc/proximus
	install -d ${DESTDIR}/usr/share/proximus
	install -d ${DESTDIR}/usr/share/apscheduler
	install -d ${DESTDIR}/srv/www/proximus
	install -d ${DESTDIR}/srv/www/proximus/css
	install -d ${DESTDIR}/srv/www/proximus/images
	install -d ${DESTDIR}/srv/www/proximus/templates
	install -d ${DESTDIR}/srv/www/proximus/templates/compile
	 
	install -m644 etc/cron.d/proximus ${DESTDIR}/etc/cron.d/proximus
	install -m644 etc/proximus/proximus.conf ${DESTDIR}/etc/proximus/proximus.conf
	install -m644 usr/share/proximus/* ${DESTDIR}/usr/share/proximus
	chmod +x ${DESTDIR}/usr/share/proximus/proximus
	install -m644 srv/www/proximus/proximus.php   ${DESTDIR}/srv/www/proximus
	install -m644 srv/www/proximus/css/style.css   ${DESTDIR}/srv/www/proximus/css
	install -m644 srv/www/proximus/imgages/logo.png   ${DESTDIR}/srv/www/proximus/images
	install -m644 srv/www/proximus/templates/proximus.tpl ${DESTDIR}/srv/www/proximus/templates
	
	
	

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installexamples
	dh_installinit
	dh_installcron
	dh_link
	dh_compress
	dh_fixperms
	dh_installdeb
	# fix some permissions
	chown proxy:www-data ${DESTDIR}/etc/proximus/proximus.conf
	chmod 440 ${DESTDIR}/etc/proximus/proximus.conf
	chown www-data:www-data ${DESTDIR}/srv/www/proximus/templates/compile
	
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here.
binary-arch: build install

binary: binary-indep binary-arch
.PHONY: build clean binary install configure
